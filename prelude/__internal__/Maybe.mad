import _ from "Functor"

export data Maybe a
  = Just a
  | Nothing


instance Functor Maybe {
  map = (f) => where
    is Just x : Just(f(x))
    is Nothing: Nothing
}

chain :: (a -> Maybe b) -> Maybe a -> Maybe b
export chain = (f, m) => (where(m) {
  is Just x : f(x)
  is Nothing: Nothing
})

fromMaybe :: a -> Maybe a -> a
export fromMaybe = (def, mabe) => (where(mabe)
  is Just a : a
  is Nothing: def
)
